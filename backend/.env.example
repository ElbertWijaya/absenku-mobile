# App
NODE_ENV=development
PORT=3000
APP_TIMEZONE=Asia/Jakarta
SWAGGER_ENABLE=true

# Database (MariaDB)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=absensi_db
DB_USER=absensi_user
DB_PASS=supersecret

# JWT
JWT_ACCESS_SECRET=replace_with_long_random_string
JWT_ACCESS_TTL=15m
JWT_REFRESH_SECRET=replace_with_another_long_random_string
JWT_REFRESH_TTL=14d

# QR token / Attendance
QR_TOKEN_ROTATION_SECONDS=60
QR_TOKEN_TTL_SECONDS=120
ATTENDANCE_GRACE_MINUTES=10
MIN_CHECKOUT_AFTER_MINUTES=60
ATTENDANCE_ON_TIME_CUTOFF=09:15
ATTENDANCE_ABSENT_CUTOFF=16:30

# Multi-location & Geofencing
ATTENDANCE_REQUIRE_GEOFENCE=false
GEOFENCE_RADIUS_DEFAULT_M=200
GEOFENCE_MAX_CLOCK_SKEW_MIN=2

# Payroll (per hari)
PAYROLL_LATE_UNIT_MIN=15
PAYROLL_LATE_UNIT_DEDUCTION_PERCENT=1.0
PAYROLL_OVERTIME_RATE_MULTIPLIER=1.5
PAYROLL_MINUTES_PER_DAY=480

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=120

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3001