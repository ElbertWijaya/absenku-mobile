{
  "name": "absenku-backend",
  "version": "0.1.0",
  "description": "Backend Absensi - NestJS + TypeORM + MariaDB",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/database/migrations/new_migration",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/auto -d src/database/data-source.ts",
    "seed:admin": "ts-node --transpile-only -r reflect-metadata src/seed-admin.ts",
    "seed:users": "ts-node --transpile-only -r reflect-metadata src/seed-users.ts",
    "seed:roles": "ts-node --transpile-only -r reflect-metadata src/seed-roles.ts",
  "seed:sample": "ts-node --transpile-only -r reflect-metadata src/seed-sample-data.ts",
    "db:list-users": "ts-node --transpile-only -r reflect-metadata src/scripts/list-users.ts",
    "db:audit-accounts": "ts-node --transpile-only -r reflect-metadata src/scripts/audit-accounts.ts",
    "db:fix-accounts": "ts-node --transpile-only -r reflect-metadata src/scripts/audit-accounts.ts --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.2.1",
    "@nestjs/typeorm": "^10.0.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "bonjour-service": "^1.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.11.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
